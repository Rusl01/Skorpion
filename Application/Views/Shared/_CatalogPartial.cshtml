<div class="row border-top border-bottom">
    <div class="col">
        <nav class="navbar navbar-expand-lg hstack gap-3">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuGenre" data-bs-toggle="dropdown" aria-expanded="false">
                    Жанр
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuGenre">
                    <li>
                        <a class="dropdown-item" href="#">Action</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Another action</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuPlatform" data-bs-toggle="dropdown" aria-expanded="false">
                    Платформа
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuPlatform">
                    <li>
                        <a class="dropdown-item" href="#">Windows</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Linux</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">Mac</a>
                    </li>
                </ul>
            </div>
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#searchCatalog" aria-controls="searchCatalog" aria-expanded="false" aria-label="Search Catalog">
                <span class="ti-menu"></span>
            </button>
            <div class="collapse navbar-collapse" id="searchCatalog">
                <form class="ms-auto d-flex">
                    <input class="form-control me-2" type="search" placeholder="Найти игру" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit">Поиск</button>
                </form>
            </div>
        </nav>
    </div>
</div>
<div class="row mt-3">
    @foreach (Game game in Model)
    {
        <div class="col-sm">
            <div class="card block-color mb-3">
                <img src="@game.Cover" width="300" height="400" class="card-img-top" alt="...">
                <div class="card-body d-flex justify-content-between">
                    <h2 class="card-title">5000 ₽</h2>
                    <button class="btn my-2 my-sm-0 btn-grad ml-auto" type="submit">Купить</button>
                </div>
            </div>
        </div>
    }
</div>