@model IQueryable<Game>
@{
    ViewData["Title"] = "Главная";
}

<div class="mt-3">
    <div class="row justify-content-center">
        @foreach (Game game in Model)
        {
            <div class="col-sm-6">
                <div class="card block-color mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@game.Cover" class="card-img" width="200" height="200"  alt="https://www.digiseller.ru/preview/828276/p1_2894461_1c8d45ca.jpg">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@game.Title</h5>
                                <p class="card-text">@game.Description</p>
                                <p class="card-text">
                                    <small class="text-muted">Релиз вышел @game.ReleaseDate.ToShortDateString()</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row mt-3">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-dark white block-color">
                <span class="navbar-brand">Жанры</span>
                <span class="navbar-brand">Сортировка</span>
                <form class="form-inline my-2 my-lg-0 mr-auto">
                    <input class="form-control mr-sm-2" type="search" placeholder="Найти игру" aria-label="Search">
                    <button class="btn my-2 my-sm-0 btn-grad" type="submit">Поиск</button>
                </form>
            </nav>
        </div>
    </div>
    <div class="row mt-3">
        @foreach (Game game in Model)
        {
            <div class="col-sm">
                <div class="card mb-3">
                    <img src="@game.Cover" width="300" height="400" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-title">5000 ₽</p>
                        <button class="btn my-2 my-sm-0 btn-grad mr-auto" type="submit">Купить</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>