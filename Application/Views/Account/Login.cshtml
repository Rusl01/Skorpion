@model Application.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="mt-3 h-100 w-50 row align-items-center">
    <main class="form-signin">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">Пожалуйста, авторизуйтесь</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" asp-for="Email" placeholder="name@example.com">
                <label for="floatingInput" asp-for="Email">Электронная почта</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Пароль">
                <label asp-for="Password" for="floatingPassword">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input asp-for="RememberMe" type="checkbox" value="remember-me"> Запомните меня
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
        </form>
    </main>
</div>