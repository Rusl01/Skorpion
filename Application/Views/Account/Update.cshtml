@model Application.ViewModels.UpdateViewModel
@{
    ViewData["Title"] = "Редактирование";
}

<div class="mt-3 h-100 w-50 row align-items-center">
    <main class="form-signin">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">Пожалуйста, введите свои новые данные</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <img id='avatar-img' src='@Model!.UserPhotoUrl' alt='Avatar' width="256px" onerror="setImgSrcDefault()">
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserPhotoUrl" id="avatar-input" type="url" class="form-control" id="floatingInput" placeholder="ivangun">
                <label asp-for="UserPhotoUrl" for="floatingInput">URL Фотографии</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Nickname" type="text" class="form-control" id="floatingInput" placeholder="ivangun">
                <label asp-for="Nickname" for="floatingInput">Псевдоним</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label asp-for="Email" for="floatingInput">Электронная почта</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Обновить информацию</button>
        </form>
    </main>
</div>