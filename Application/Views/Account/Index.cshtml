@model Application.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Профиль";
}
<div class="container">
    <div class="row">
        <div class="col rounded-3">
            <h2>Информация</h2>
            <p>
                <img src="@Model.User.UserPhotoUrl" alt="avatar" width="128px">
            </p>
            <p>@Model.User.Nickname</p>
            <p>@User?.Identity?.Name</p>
            <a asp-controller="Account" asp-action="Logout" class="w-25 btn btn-lg btn-primary">Выйти из аккаунта</a>
            <a class="w-25 btn btn-lg btn-danger">Редактировать аккаунт</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8">
            <h2>Купленные игры</h2>
            @foreach (var item in Model.KeyGames)
            {
                <p>@item.Key</p>
                <p>@item.Value.Title</p>
            }
        </div>
        <div class="col-4">
            <h2>Друзья</h2>
        </div>
    </div>
</div>